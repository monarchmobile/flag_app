<div class="journal_container">
	<% if @resource_m == "weekly_scrapbook" %>
		<%= content_tag :h2, "#{@beg_range.strftime('%B')} #{@beg_range.strftime('%d')}-#{@end_range.strftime('%d')}, #{@beg_range.strftime('%Y')}", class: "journal_date_range" %>
	<% else %>
		<%= content_tag :h2, @beg_range.strftime("%B %d, %Y"), class: "journal_date_range" %>
	<% end %>
	<% @user_journals.each do |entry| %>	
			<div class="journal_entry">

				<%= content_tag :p, entry.content %>
								
				<%= link_to image_tag("delete.png", width: 15, height: 15), [@user, entry ], :confirm => 'Are you sure?', :method => :delete, class: "scrap_image_X" %>
				<%= link_to "Edit", [:edit, @user, entry] %>
			</div>
			
	<% end %>	
</div>