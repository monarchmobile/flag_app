<div class="auth-form home_forms">
    <%= render("shared/close") %>
    <%= form_tag sessions_path do %>
        <div class="field">
            <%= label_tag :email %><br />
            <%= text_field_tag :email, params[:email] %>
        </div>
        <div class="field">
            <%= label_tag :password %><br />
            <%= password_field_tag :password %>
        </div>
        <div class="field">
            <%= label_tag :remember_me %>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        </div>
        <%= content_tag :div, link_to("forgot password?", new_password_reset_path), class: "forgot_password"  %><br /><br />
        <div class="actions"><%= submit_tag "Log In" %></div>
    <% end %>
</div> 