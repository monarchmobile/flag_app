
<% if @already_voted_for_week %>
	<% unless f.id == @week_vote.owner_id %>
		<%= form_for @week_vote, html: {id: "student_#{f.id}_best_week", class: "best_week"}, remote: true do |v| %>
			<%= v.hidden_field :id, value: @week_vote.id %>
			<%= v.hidden_field :owner_id, value: f.id %>
			<%= v.submit "Change Vote", class: "best_btn" %>
		<% end %>
	<% end %>
<% else %>
	<%= form_for @week_vote, html: {id: "student_#{f.id}_best_week", class: "best_week"} do |v| %>
		<%= v.hidden_field :owner_id, value: f.id %>
		<%= v.hidden_field :beg_range, value: previous_week_beg(Date.today) %>
		<%= v.hidden_field :range_type, value: 1 %>
		<%= v.hidden_field :voted, value: true %>
		<%= v.submit "Best Week", class: "best_btn" %>
	<% end %>
<% end %>


