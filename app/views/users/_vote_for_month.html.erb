 
<% if @already_voted_for_month %>
	
		<%= form_for @month_vote, html: {id: "student_#{f.id}_best_month", class: "best_month"}, remote: true do |v| %>
			<%= v.hidden_field :id, value: @month_vote.id %>
			<%= v.hidden_field :owner_id, value: f.id %>
			<% if @already_voted_for_month.owner_id == f.id %>
				<%= v.submit "Voted For", class: "best_btn" %>
			<% else %>
				<%= v.submit "Change Vote", class: "best_btn" %>
			<% end %>
		<% end %>
	
<% else %>
	<%= form_for @month_vote, html: {id: "student_#{f.id}_best_month", class: "best_month"} do |v| %>
		<%= v.hidden_field :owner_id, value: f.id %>
		<%= v.hidden_field :beg_range, value: Date.today.beginning_of_month %>
		<%= v.hidden_field :range_type, value: 2 %>
		<%= v.hidden_field :voted, value: true %>
		<%= v.submit "Best Month", class: "best_btn" %>

	<% end %>
<% end %>
