
<div class="field"> 
    <%= f.label :first_name, "First Name" %> <%= required_field %><br />
    <%= f.text_field :first_name %>
</div>
<div class="field"> 
    <%= f.label :last_name, "Last Name" %> <%= required_field %><br />
    <%= f.text_field :last_name %>
</div>
<div class="field"> 
    <%= f.label :email, "Email" %> <%= required_field %><br />
    <%= f.text_field :email %>
</div>
<% if @user.new_record? %>
    <div class="field">
        <%= f.label :password %> <%= required_field %><br />
        <%= f.password_field :password %>
    </div>
<% else %>
    <div class="field">
        <%= f.label :password, "Change Password: Leave blank if you do NOT want to change your password" %><br />
        <%= f.password_field :password %>
    </div>
<% end %> 
<div class="field">
    <%= f.label :password_confirmation, "Confirm Password" %> <%= required_field %><br />
    <%= f.password_field :password_confirmation %>
</div>

        