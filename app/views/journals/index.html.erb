<h1>Listing journals</h1>

<table>
  <tr>
    <th>User</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @journals.each do |journal| %>
  <tr>
    <td><%= journal.user_id %></td>
    <td><%= journal.content %></td>
    <td><%= journal.day %></td>
    <td><%= journal.week %></td>
    <td><%= journal.month %></td>
    <td><%= journal.year %></td>
    <td><%= journal.entry_date %></td>
    <td><%= link_to 'Show', [@user, journal] %></td>
    <td><%= link_to image_tag("delete.png", width: 15, height: 15), [@user, journal ], :confirm => 'Are you sure?', :method => :delete, class: "scrap_image_X", remote: true %></td>
    
    
    
  </tr>
<% end %>
</table>

