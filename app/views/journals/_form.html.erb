

<%= form_for [@user, @journal], remote: true do |f| %>
  <% @resource_m = request.path.split('/')[1] %>
  <% if @journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@journal.errors.count, "error") %> prohibited this journal from being saved:</h2>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.hidden_field :entry_date, value: @entry_date %>
  <%= f.hidden_field @range.to_sym, value: @boolean %>

  <div class="field">
    <%= f.label :content, "Journal Entry" %><br />
    <%= f.text_area :content, cols: 10, rows: 4 %>
  </div>
  <div class="actions">
    <%= f.submit "Add Entry" %>
  </div>
<% end %>
