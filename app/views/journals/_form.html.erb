

<%= form_for [@user, @journal], remote: true do |f| %>
  <% @resource_m = request.path.split('/')[1] %>
  <% if @journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@journal.errors.count, "error") %> prohibited this journal from being saved:</h2>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <%= f.hidden_field :user_id, value: @user.id %>
  <br />
  <div class="field">
    <%= f.label :entry_date %><br />
    <%= f.text_field :entry_date  %>
  </div>
  <div class="field">
      <%= f.label :day %>
      <%= f.check_box :day %>
      <%= f.label :week %>
      <%= f.check_box :week %>
      <%= f.label :month %>
      <%= f.check_box :month %>
      <%= f.label :year %>
      <%= f.check_box :year %>
  </div>
  <div class="field">
    <%= f.label :content,:rows => 2,
                :cols => 10, :rows => 10 %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Add Entry" %>
  </div>
<% end %>
