<%= form_for @announcement do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :message %>
		<%= f.text_area :message, rows: 4 %>
	</div>
	<div class="field">
		<%= f.label :starts_at %>
		<%= f.text_field :starts_at %>
	</div>
	<div class="field">
		<%= f.label :ends_at %>
		<%= f.text_field :ends_at %>
	</div>
	<div class="field">
		<%= f.label :published %>
		<%= f.select(:published, [["draft", false], ["published", true]]) %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
	
<% end %>
