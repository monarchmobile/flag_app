<% @user_images.each do |image| %> 
<!-- render out each image -->
	<!-- calculates which image belongs to -->
	<div class="test_box" style="position:absolute; top:150px;"></div>
	<% page_variables(image) %>

	<div class="hide" id="edit_container"></div>
	<div class="image_container thumbnail" style="width:<%= @con_width %>px;height:<%= @con_height %>px;left:<%= @left %>px;top:<%= @top %>px; position:absolute; z-index:<%= @z_index %>;" data-id="<%= image.id %>" data-range="<%= page %>" data-root="<%= root_path %>"  >
		
		<ul class="control_panel" style="width:<%= @con_width %>px;">
			<!-- resize, edit, delete, week, month, year -->
			<%= render("scrapbooks/shared/control_panel", image: image )  %>
			
                <!-- add or remove image from given range-->		
			<%= render("scrapbooks/shared/options", image: image ) %>
			<li><%= link_to "", [@user, image], id: "delete_image_#{image.id}", :confirm => 'Are you sure?', :method => :delete, :"data-purpose" => "Delete your image",class: "image_X cp", remote: true %></li>
			<!-- <div class="range_options"></div> -->
		</ul>
		<%= render("scrapbooks/shared/image_description", image: image ) %>
	   	<%= render("scrapbooks/shared/the_image", image: image ) %>	
	</div>
	 <p id="large"></p>
<% end %>