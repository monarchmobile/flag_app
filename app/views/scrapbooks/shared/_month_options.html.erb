<%= render('scrapbooks/shared/links/go_down_to_day', image: image) %>
<%= render('scrapbooks/shared/links/go_down_to_week', image: image) %>
<!-- remove from month gallery -->
<li class="cp" data-purpose="month gallery"><span class="included">M</span></li>
<%= form_for [@user, image], html: {id: "remove_image_#{image.id}" }, remote: true do |f| %>
    <%= f.check_box :month %>
<% end %>

<!-- year gallery options -->
<% if image.year == false || image.year == nil %> 
    <% if (@user.images.where(date_taken: @beg_year..@end_year, year: true).count < 5) %>
        <li class="cp" data-purpose="not part of your year gallery"><span class="not_included">Y</span></li>
        <%= form_for [@user, image], html: {id: "add_image_#{image.id}" }, remote: true do |f| %>
          <%= f.check_box :year %>
        <% end %> 
    <% else %>
        <%= link_to content_tag(:li, content_tag(:span, "Y", class: "full"), :"data-purpose" => "your year is full", class: "cp"), go_to_up_link(@user)+up_link_params(@user), remote: true %>
    <% end %>
    
<% elsif image.year == true %>
    <%= link_to content_tag(:li, content_tag(:span, "Y", class: "included"), :"data-purpose" => "this image is included in your year gallery", class: "cp"), go_to_up_link(@user)+up_link_params(@user), remote: true %>
<% end %>
