<!-- month gallery options --> 
<% if image.month == true %>
    <%= link_to content_tag(:li, content_tag(:span, "M", class: "included"), :"data-purpose" => "this image included month gallery", class: "cp"), go_to_month_link(@user)+duration_params(image.date_taken, @user, "month"), remote: true %>
<% else  %>
    <%= content_tag(:li, content_tag(:span, "M", class: "not_included"), :"data-purpose" => "this image not included in month gallery", class: "cp") %>
<% end %>