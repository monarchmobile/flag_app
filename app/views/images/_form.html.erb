    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :date_taken %><br />
    <%= f.datetime_select :date_taken %>
  </div>
  <div class="field">
    <%= f.label :week %><br />
    <%= f.check_box :week %>
  </div>
  <div class="field">
    <%= f.label :month %><br />
    <%= f.check_box :month %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.check_box :year %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
