<h1>Listing images</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Url</th>
    <th>Content</th>
    <th>Date taken</th>
    <th>Week</th>
    <th>Month</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.user_id %></td>
    <td><%= image.title %></td>
    <td><%= image.url %></td>
    <td><%= image.content %></td>
    <td><%= image.date_taken %></td>
    <td><%= image.week %></td>
    <td><%= image.month %></td>
    <td><%= image.year %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

