 
if (<%= @boolean %> == 0) {
	$('#remove_image_<%=@image.id%>').parent(".gallery_msg")
										.html("Image Deleted")
										.parent().parent().fadeOut(3000);
} else if (<%= @boolean %> == 1) {
	// /weekly_scrapbook
	current_scrapbook = window.location.pathname;
    current = current_scrapbook.split("/")[4]
 	$('#add_image_<%=@image.id%>').parent(".gallery_msg")
 									.html(current+'Image added to your <%= @range %>' )
 									.fadeOut(6000);
} 