 
if (<%= @boolean %> == 0) {
	this_obj = $('#remove_image_<%=@image.id%>')
	this_obj.parent().parent(".control_panel").children(".message")
										.html("Deleting image from this page")
										.parent().parent(".image_container").fadeOut(6000);
	this_obj.parent().children().hide()
} else if (<%= @boolean %> == 1) {
	// /weekly_scrapbook
	
    $(".cp").show()
    this_obj = $('#add_image_<%=@image.id%>')
 	this_obj.parent().parent(".control_panel").children(".message")
 									.html('Image added to your gallery' )
 									.fadeOut(10000);
 	this_obj.parent().children().hide()

} else if (<%= @boolean %> == 2) {
	
	$("#edit_container").hide()
	$("#background").fadeOut("slow")
	$(".notice").html("Changes Saved!").show().animate({
		"margin-left": "-100px",
		"margin-top": "-100px",
		"opacity": "0"
	}, 6000)
}